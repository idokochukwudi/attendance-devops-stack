pipeline {
    agent any

    environment {
        // Set the path for the .env file
        DOTENV = "${env.WORKSPACE}/.env"
    }

    stages {
        stage('Checkout Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/idokochukwudi/attendance-devops-stack.git'
            }
        }

        stage('Export Environment Variables') {
            steps {
                script {
                    if (fileExists(DOTENV)) {
                        def envVars = readFile(DOTENV).split("\n")
                        for (line in envVars) {
                            if (line.trim() && !line.startsWith("#")) {
                                def parts = line.split("=")
                                if (parts.length == 2) {
                                    env[parts[0]] = parts[1]
                                }
                            }
                        }
                    } else {
                        error ".env file not found!"
                    }
                }
            }
        }

        stage('Build Services') {
            steps {
                sh 'docker-compose build'
            }
        }

        stage('Deploy Stack') {
            steps {
                sh 'docker-compose up -d'
            }
        }

        stage('Verify Running Containers') {
            steps {
                sh 'docker ps'
            }
        }
    }

    post {
        success {
            echo '✅ Deployment completed successfully!'
        }
        failure {
            echo '❌ Deployment failed. Please check the logs.'
        }
    }
}
