pipeline {
  agent any

  environment {
    DOCKER_COMPOSE = 'docker-compose'
  }

  stages {
    stage('Build') {
      steps {
        sh 'docker-compose build app'
      }
    }
    
    stage('Test') {
      steps {
        // Add your test script if available
        echo 'No tests specified yet'
      }
    }

    stage('Deploy') {
      steps {
        sh 'docker-compose up -d app'
      }
    }
  }
}
